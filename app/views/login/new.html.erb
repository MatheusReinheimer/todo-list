<%= flash[:notice] %>

<%= link_to t("menu.login"), "/login"%>
<%= link_to t("menu.signup"), "/signup"%>

<%= form_tag "/login" do %>
  <p>
    <%= label_tag :email, t("form.user.email") %>
    <%= email_field_tag :email, params[:email] %>
  </p>

  <p>
    <%= label_tag :password, t("form.user.password") %>
    <%= password_field_tag :password %>
  </p>

  <p>
  <%= submit_tag t("form.submit.login")%>
  </p>
<% end %>
